<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="26dp"
    android:orientation="vertical"
    tools:context=".ui.payment.PaymentFragment"
    android:background="#DCD5EA">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="6dp"
        android:background="@drawable/baseline_arrow_back_ios_24"
        android:contentDescription="button_back"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Payment ways!"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="#4044F8"
        android:textSize="26dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_visa"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_marginTop="14dp"
        app:cardBackgroundColor="#177CA4C5"
        app:cardCornerRadius="19dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/visa" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_paypal"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_marginTop="14dp"
        app:cardBackgroundColor="#177CA4C5"
        app:cardCornerRadius="26dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/pay_pal_icon" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_m_bank"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_marginTop="14dp"
        app:cardBackgroundColor="#177CA4C5"
        app:cardCornerRadius="26dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/visa" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_o_dengi"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_marginTop="14dp"
        app:cardBackgroundColor="#177CA4C5"
        app:cardCornerRadius="26dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/o_dengi" />
    </androidx.cardview.widget.CardView>

</LinearLayout>